- title website_name: @website.name, branch_name: @branch.title(current_user), filename: @page.full_pathname

= layout :blob, website: @website, branch: @branch, blob: @page, filename: @page.full_pathname do
  = form_for [@website, @branch, @page] do |form|
    = render partial: 'blobs/form', object: form, locals: { branch: @branch, placeholder: "Save changes to #{@page.full_pathname}" }
