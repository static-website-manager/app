- @_body_container = false
- title "Draft History #{@draft.short_id} â€¢ #{@branch.title(current_user)}"

.blob-container
  .blob-header
    .container-fluid
      => link_to [@website, @branch, :drafts], class: 'logo-small-back-container' do
        => icon 'reply'
        => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
      ul.nav.nav-tabs
        li = link_to 'Overview', [@website, @branch, @draft]
        li = link_to 'Edit', [:edit, @website, @branch, @draft]
        li.active = link_to 'History', [@website, @branch, @draft, :commits]
  .container-fluid
    .blob-content
      ol.list-unstyled.commits
        = render @commits, website: @website
      = render partial: 'pagination', object: @commits
