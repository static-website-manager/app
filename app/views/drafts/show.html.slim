- @_body_container = false
- title "Draft #{@draft.short_id} â€¢ #{@branch.title(current_user)}"

.blob-container
  .blob-header
    .container-fluid
      => link_to [@website, @branch, :drafts], class: 'logo-small-back-container' do
        => icon 'reply'
        => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
      ul.nav.nav-tabs
        li.active = link_to 'Overview', '#'
        li = link_to 'History', [@website, @branch, @draft, :commits]
        li = link_to 'Edit', [:edit, @website, @branch, @draft]
  .container-fluid
    .blob-content
      .row
        .col-sm-9
          h1 = @draft.title
          code.small = @draft.full_pathname
        .col-sm-3.text-right
          => link_to [:new, @website, @branch, @draft, :move], class: 'btn btn-primary' do
            ' Rename
            = icon 'angle-double-right'
          = link_to [:delete, @website, @branch, @draft], class: 'btn btn-danger' do
            => icon 'trash'
            | Delete
      .row
        .col-sm-7
          .column-header
            h2 Recent Activity
          .text-center style="background-color: #eee; height: 16em;"
        .col-sm-5
          .column-header
            h2 Commit History
          ol.list-unstyled.commits
            = render @commits, website: @website
          .text-right style="margin-top:2em"
            = link_to [@website, @branch, @draft, :commits], class: 'btn btn-sm btn-default' do
              ' View Entire History
              = icon 'angle-double-right'
