- @_body_container = false
- title "Edit Draft #{@draft.short_id} â€¢ #{@branch.title(current_user)}"

= form_for [@website, @branch, @draft] do |form|
  .editor-container
    .editor-header
      .container-fluid
        => link_to [@website, @branch, :drafts], class: 'logo-small-back-container' do
          => icon 'reply'
          => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
        ul.nav.nav-tabs
          li = link_to 'Overview', [@website, @branch, @draft]
          li = link_to 'History', [@website, @branch, @draft, :commits]
          li.active = link_to 'Edit', '#'
    .container-fluid
      .editor-content
        = form.fields_for :metadata do |metadata_form|
          - form.object.metadata.each do |field, value|
            .form-group
              = metadata_form.label field, class: 'control-label'
              = metadata_form.text_field field, value: value, class: 'form-control'
        - if @draft.writable?
          .form-group
            = form.label :content, class: 'control-label'
            = form.text_area :content, rows: 20, class: 'form-control'
        - else
          pre: code = @draft.content
        hr
        .row
          .col-sm-6.col-sm-offset-3
            .row
              .col-sm-9
                = text_field_tag :message, params[:message], placeholder: "Save changes to #{@draft.raw_pathname}", class: 'form-control'
              .col-sm-3
                = form.button class: 'btn btn-success' do
                  | Save Changes
