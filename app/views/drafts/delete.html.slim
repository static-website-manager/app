- title "Delete Draft #{@draft.short_id} â€¢ #{@branch.title(current_user)}"

.header.header-center
  h1.lead
    = link_to [@website, @branch, @draft], class: 'logo-small-back-container' do
      => icon 'reply'
      => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
    | | Delete Draft
.row
  .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    = errors_for @draft
    = form_for [@website, @branch, @draft], method: :delete do |form|
      .panel.panel-default
        .panel-heading
          p.h4.panel-title = @draft.title
        .panel-body
          .form-group
            = label_tag :message, 'Commit Message', class: 'control-label'
            = text_field_tag :message, params[:message].nil? ? "Delete Draft #{@draft.pretty_pathname}" : params[:message], class: 'form-control'
        .panel-footer.text-center
            = form.button 'Delete Draft', class: 'btn btn-danger'
