- title "New Post â€¢ #{@branch.title(current_user)}"

.header.header-center
  h1.lead
    = link_to session[:return_to] || [@website, @repository.branch(current_user)], class: 'logo-small-back-container' do
      => icon 'reply'
      => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
    ' | New Post
    small = @branch.title(current_user)
.row
  .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    = errors_for @post
    .panel.panel-default
      = form_for [@website, @branch, @post] do |form|
        .panel-body
          .row
            .col-sm-9
              => label_tag :name, 'File Name', class: 'control-label'
              = text_field_tag :name, params[:name], class: 'form-control'
            .col-sm-3
              => label_tag :extension, 'Extension', class: 'control-label'
              = select_tag :extension, options_for_select([['Markdown', 'md'], ['HTML', 'html']]), class: 'form-control'
        .panel-footer.text-center
            = form.button 'Save Post', class: 'btn btn-primary'
