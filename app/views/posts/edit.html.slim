- @_body_container = false
- title "Edit Post #{@post.short_id} â€¢ #{@branch.title(current_user)}"

= form_for [@website, @branch, @post] do |form|
  .blob-container
    .blob-header
      .container-fluid
        => link_to [@website, @branch, :posts], class: 'logo-small-back-container' do
          => icon 'reply'
          => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
        ul.nav.nav-tabs
          li = link_to 'Overview', [@website, @branch, @post]
          li.active = link_to 'Edit', [:edit, @website, @branch, @post]
          li = link_to 'History', [@website, @branch, @post, :commits]
    .container-fluid
      .blob-content
        = render partial: 'blobs/form', object: form, locals: { placeholder: "Save changes to #{@post.pretty_pathname}" }
