- @_body_container = false
- title website_name: @website.name, branch_name: @branch.title(current_user), filename: @post.pretty_pathname

.blob-container
  .blob-header
    .container-fluid
      => link_to [@website, @branch, :posts], class: 'logo-small-back-container' do
        => icon 'reply'
        => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
      ul.nav.nav-tabs
        li = link_to 'Overview', [@website, @branch, @post]
        li.active = link_to 'Edit', [:edit, @website, @branch, @post]
        li = link_to 'History', [@website, @branch, @post, :commits]
  .container-fluid
    .blob-content
      .blob-icon-sm
        span.label.label-primary POST
      h1: code.code-text = @post.pretty_pathname
      hr
      = form_for [@website, @branch, @post] do |form|
        = render partial: 'blobs/form', object: form, locals: { branch: @branch, placeholder: "Save changes to #{@post.pretty_pathname}" }
