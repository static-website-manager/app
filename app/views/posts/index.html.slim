- title "Posts â€¢ #{@website.name} [#{@branch.name}]"

= render partial: 'websites/header', locals: { website: @website }
= render partial: 'branches/header', locals: { website: @website, branch: @branch }

ul.nav.nav-tabs
  li = link_to 'Overview', [@website, @branch]
  li = link_to 'Pages', [@website, @branch, :pages]
  li = link_to 'Drafts', [@website, @branch, :drafts]
  li.active = link_to 'Posts', [@website, @branch, :posts]

.table-responsive
  table.table.table-bordered.table-striped.table-hover.posts
    caption = page_entries_info @posts, entry_name: 'post'
    thead
      tr
        th Title
        th Author
        th Published
        th Pathname
    tbody
      = render @posts
= paginate @posts
