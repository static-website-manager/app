- title "Rename Post #{@post.short_id} â€¢ #{@branch.title(current_user)}"

.header.header-center
  h1.lead
    = link_to session[:return_to] || [@website, @branch, @post], class: 'logo-small-back-container' do
      => icon 'reply'
      => image_tag 'logo-small.png', alt: 'Static Website Manager', class: 'logo-small'
    | | Rename Post
.row
  .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
    = errors_for @post
    = form_for @post, url: [@website, @branch, @post, :move], method: :post do |form|
      .panel.panel-default
        .panel-body
          .row
            .col-sm-9
              => form.label :basename, class: 'control-label'
              = form.text_field :basename, class: 'form-control'
            .col-sm-3
              => form.label :extension, class: 'control-label'
              = form.select :extension, options_for_select([['Markdown', 'md'], ['HTML', 'html']], form.object.extension), {}, class: 'form-control'
        .panel-footer.text-center
          = form.button 'Rename Post', class: 'btn btn-primary'
